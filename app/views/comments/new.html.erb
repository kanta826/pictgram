<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for(@comment) do |f| %>
          <%= f.hidden_field :topic_id, :value => params[:topic_id] %>
          <%= f.text_field :comment_content %>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
